{
    "name": "Sticky Notes",
    "version": "1.0",
    "description": "Notes Chrome Extension!",
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "notifications",
      "http://*/",
      "https://*/"
    ],      
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
        "default_icon": {
        "48": "images/logo.png"
      }
    },
    "icons": {
      "48": "images/logo.png"
    }, 
    "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "js":["js/p5.js"]
    }],
    "manifest_version": 2
  }